<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             Title="Hands">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Clicked="OnAddHandClicked" Priority="0"/>
        <ToolbarItem Text="⇩" Clicked="OnReceiveHandClicked" Priority="1"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*">
            <!-- Optional title or instructions at the top -->
            <Label Text="Your Hands"
                   FontAttributes="Bold"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   Margin="0,16,0,8"/>
            
            <CollectionView
                x:Name="HandList"
                Grid.Row="1"
                ItemsSource="{Binding Hands}"
                SelectionMode="Single"
                SelectionChanged="OnHandSelected"
                EmptyView="No hands yet. Tap + to add your first hand.">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,Auto,Auto"
                              Padding="12,8">
                            <Label Text="{Binding Location}"
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label Text="{Binding ProfitLoss, StringFormat='{}{0:+#;-#;0}'}"
                                   Grid.Column="1"
                                   FontSize="Medium"
                                   HorizontalOptions="Center"
                                   TextColor="{Binding ProfitLoss, Converter={StaticResource ProfitLossToColorConverter}}"/>
                            <Image Source="{Binding HeroCardIcon}"
                                   Grid.Column="2"
                                   HeightRequest="36"
                                   WidthRequest="48"
                                   Margin="8,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
